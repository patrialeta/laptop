#!/bin/bash -e
DEVICE="$1"
FEED=$(curl -s 'https://www.archlinux.org/feeds/releases/')
TORRENT=$(echo "$FEED" | grep -o '<item>.*<enclosure url="[^"]*' | grep -o '[^"]*$' | head -1)
FILE="$(basename "${TORRENT%.torrent}")"
TMP="$(mktemp -d)"
cd "$TMP"
transmission-get "$TORRENT"
sudo dd bs=4M if="$FILE" of="$DEVICE" && sync
rm -rf "$TMP"
