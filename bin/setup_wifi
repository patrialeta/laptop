#!/usr/bin/env bash
set -o errexit
set -o nounset
# set -o xtrace
set -o pipefail

INTERFACE="$1"

tee "/etc/systemd/network/$INTERFACE.network" <<EOF
[Match]
Name=$INTERFACE

[Network]
DHCP=yes
EOF

touch "/etc/wpa_supplicant/wpa_supplicant-$INTERFACE.conf"

systemctl enable wpa_supplicant@$INTERFACE
